<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Punto"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="36dp"/>

    <EditText
        android:id="@+id/x"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="Coordenada X"
        android:inputType="numberDecimal|numberSigned" />

    <EditText
        android:id="@+id/y"
        app:layout_constraintTop_toBottomOf="@id/x"
        android:layout_marginTop="16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="Coordenada Y"
        android:inputType="numberDecimal|numberSigned" />

    <Spinner
        android:id="@+id/tipoPoste"
        app:layout_constraintTop_toBottomOf="@id/y"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/tipoCable"
        app:layout_constraintTop_toBottomOf="@id/tipoPoste"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/cantidadPelos"
        app:layout_constraintTop_toBottomOf="@id/tipoCable"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/tipoManga"
        app:layout_constraintTop_toBottomOf="@id/cantidadPelos"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/cantidadSplitters"
        app:layout_constraintTop_toBottomOf="@id/tipoManga"
        android:layout_marginTop="16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="Cantidad de splitters"
        android:inputType="numberSigned" />



</android.support.constraint.ConstraintLayout>